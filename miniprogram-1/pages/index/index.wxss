/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.table-content {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  display: block;
  width: 300px;
  height: 300px;
  border-radius: 50%;
  background-clip: padding-box;
  background-color: #ffcb3f;
}

.table-litem {
  position: absolute;
  left: 150px;
  top: 0;
  width: 1px;
  height: 150px;
  background-color: rgba(228, 55, 14, .4);
  overflow: hidden;
  -webkit-transform-origin: 50% 150px;
  transform-origin: 50% 150px;
}

.table-line {
  position: absolute;
  left: 0;
  top: 0;
  width: 300px;
  height: 300px;
  z-index: 99;
}

.circle {
  margin: 0 auto;
  width: 300px;
  height: 300px;
  border-radius: 50%;
  background: conic-gradient(#000080 0 45deg,
      #6F4E37 45deg 90deg,
      #228B22 90deg 135deg,
      #98FF98 135deg 180deg,
      #FF4500 180deg 225deg,
      #F5F5DC 225deg 270deg,
      #FAF0E6 270deg 315deg,
      #C0C0C0 315deg 360deg);
  position: relative;
}

.table-list {
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 9998;
}

.table-item {
  display: flex;
  justify-content: center;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  color: black;
  text-shadow: 0 1px 1px rgba(255, 255, 255, .6);
}

.table-item-text {
  position: absolute;
  padding-top: 10px;
  /* width: 50px; */
  margin: 0 auto;
  text-align: center;
  word-wrap: break-word;
  width: 60px;
  transform-origin: 50% 150px;
}

.want {
  border: solid 1px gray;
  margin: 70px auto;
  padding: 10rpx;
  border-radius: 10rpx;
  width: 75%;
}

.start1 {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  z-index: 9999;
}

.start2 {
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  background-color: #E44025;
  border-radius: 50%;
  width: 60px;
  height: 60px;
}

.Triangle {
  position: absolute;
  bottom: 45px;
  border-width: 25px;
  border-style: solid;
  border-color: transparent;
  border-bottom-color: #E44025;
}